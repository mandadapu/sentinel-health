# GCP
GCP_PROJECT_ID=sentinel-health-dev
ENV=dev

# Sidecar
SIDECAR_URL=http://localhost:8081
SIDECAR_MTLS_ENABLED=false
SIDECAR_CLIENT_CERT=  # e.g. /certs/client.pem
SIDECAR_CLIENT_KEY=   # e.g. /certs/client-key.pem
SIDECAR_CA_CERT=      # e.g. /certs/ca.pem

# Anthropic
ANTHROPIC_API_KEY=

# Firestore
FIRESTORE_COLLECTION=triage_sessions

# Cloud SQL / RAG
CLOUDSQL_INSTANCE=
CLOUDSQL_DSN=postgresql://sentinel:localdev@localhost:5432/sentinel_health
RAG_TOP_K=5
EMBEDDING_MODEL=voyage-3
EMBEDDING_DIMENSION=1024
EMBEDDING_FALLBACK_MODEL=text-embedding-004
VOYAGE_API_KEY=
VERTEX_AI_LOCATION=us-central1

# Model configuration
DEFAULT_CLASSIFIER_MODEL=claude-haiku-4-5-20241022
SENTINEL_MODEL=claude-haiku-4-5-20241022

# Sentinel thresholds
HALLUCINATION_THRESHOLD=0.15
CONFIDENCE_THRESHOLD=0.85

# Routing
MIN_ROUTING_CONFIDENCE=0.70

# Emulators (for local dev)
PUBSUB_EMULATOR_HOST=localhost:8085
FIRESTORE_EMULATOR_HOST=localhost:8086
