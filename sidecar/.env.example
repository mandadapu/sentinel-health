# Sidecar configuration (all prefixed SIDECAR_)
SIDECAR_ENV=dev

# PII detection backend: "auto", "rust", or "python"
SIDECAR_PII_SCANNER_BACKEND=auto

# FHIR schema directory
SIDECAR_FHIR_SCHEMA_DIR=schemas

# Token guard thresholds
SIDECAR_MIN_OUTPUT_TOKENS=10
SIDECAR_MAX_OUTPUT_TOKENS=8192
SIDECAR_MIN_INPUT_TOKENS=5
SIDECAR_MAX_INPUT_TOKENS=50000

# mTLS
SIDECAR_MTLS_ENABLED=false
SIDECAR_MTLS_CERT_PATH=  # e.g. /certs/server.pem
SIDECAR_MTLS_KEY_PATH=   # e.g. /certs/server-key.pem
SIDECAR_MTLS_CA_PATH=    # e.g. /certs/ca.pem
