{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SentinelOutput",
  "description": "Hallucination check and safety validation output",
  "type": "object",
  "required": ["hallucination_score", "confidence_assessment", "vitals_consistent", "medication_safe"],
  "properties": {
    "hallucination_score": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0
    },
    "confidence_assessment": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0
    },
    "vitals_consistent": { "type": "boolean" },
    "medication_safe": { "type": "boolean" },
    "issues_found": {
      "type": "array",
      "items": { "type": "string" }
    }
  }
}
